<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @question.description %>
</p>

<h3>Answers</h3>
<%= @question.answers.each do |answer| %>
	<p>
		<%= answer.description %>
		<br>
		Added: <%= answer.created_at %> ago.
	</p>
<% end %>

<h3>New Answer</h3>
<%= render 'answers/form' %>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
