<%= render 'login' %>
<p id="notice"><%= notice %></p>
<!-- <h2 class="list-title text-center">Listing questions</h2> -->

<div class="all-questions text-center">
  <% @questions.each do |question| %>
  <h4 class="question-title"><%= question.title %></h4>
    <div class="tags-excluded">
      <%= question.score %>
      <%= link_to '', like_question_path(question), method: :put, class: "fa fa-plus-square-o" %>
      <%= question.description %>
      <%= link_to 'Show', question %>
      <%= link_to 'Edit', edit_question_path(question) %>
      <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %><br>
    </div>
    <div class="just-tags">
      Tags: <%= raw question.tag_list.map { |t| link_to t, tag_path(t)}.join(', ') %><br>
    </div>
  <% end %>

<br>
</div>