<% if current_user %>
	<% @questions.each do |question| %>
		<% if question.approved == false %>
		<div>
			Title: <%= question.title %><br>
			Description: <%= question.description %><br>
			By: <%= question.user.name %><br>
			<%= link_to "Approve", question_path(question), :method => :put %>
		</div>
		<br>
		<% end %>
	<% end %>
<% end %>

