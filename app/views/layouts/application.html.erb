<!DOCTYPE html>
<html>
<head>
  <title>Interque</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-social/4.2.1/bootstrap-social.css">
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
</head>

<header>
  <nav class="nav-menu">
    <%= link_to 'Home', root_path %>
    <%= link_to 'New Question', new_question_path, class: "btn btn-primary" %>
    <%= link_to 'Job Board', '#' %>
  </nav>
<!-- model callback, question model -->
</header>

<body>
<%= form_tag questions_path, id: "search-box", :method => 'get' do %>
  <p>
    <%= text_field_tag :tag, params[:tag] %>
    <%= submit_tag "Search", :name => nil %>
  </p >
<% end %>
	
<%= yield %>

</body>
</html>
